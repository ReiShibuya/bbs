<h1>ログイン</h1>

<div class="form-group">
  <%= form_with scope: :session, local: true do |form| %>
    <%= form.label :email, 'メールアドレス' %><br>
    <%= form.text_field :email, class: "form-control", id: 'session_email', placeholder: "メールアドレスを入力してください。" %><br>
    <%= form.label :password, 'パスワード' %><br>
    <%= form.password_field :password, class: 'form-control', id: 'session_password' %><br>
    <%= form.submit 'ログインする', class: "btn btn-primary" %>
  <% end %>
</div>
