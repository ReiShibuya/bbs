<h1>ユーザー一覧</h1>

<%= link_to "新規登録", new_admin_user_path, class: 'btn btn-primary' %>

<table class="table table-hover mb-3">
  <thead class="thead-default">
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>管理者権限の有無</th>
      <th>登録日</th>
      <th>更新日</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, [:admin, user] %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td>
          <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-primary mr-3' %>
          <%= link_to '削除', [:admin, user], method: :delete, data: { confirmation: "ユーザー「#{user.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>