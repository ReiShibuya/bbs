<h1>ユーザーの詳細</h1>

<nav class="justify-content-end">
  <%= link_to '一覧', admin_users_path, class: 'nav-link' %>
</nav>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>id</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>管理者権限の有無</th>
      <td><%= @user.admin? ? 'あり' : 'なし' %></td>
    </tr>
    <tr>
      <th>登録日</th>
      <td><%= @user.created_at %></td>
    </tr>
    <tr>
      <th>更新日</th>
      <td><%= @user.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_admin_user_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', [:admin, @user], method: :delete, data: { confirmation: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: 'btn btn-primary' %>